{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "rebaseWhen": "conflicted",
    "schedule": [
        "before 6am on the first day of the month"
    ],
    "baseBranches": [
        "main"
    ],
    "dependencyDashboardApproval": true,
    "rangeStrategy": "bump",
    "packageRules": [
        {
            "matchPaths": [
                "+(package.json)"
            ],
            "matchDatasources": [
                "npm"
            ],
            "matchUpdateTypes": [
                "patch",
                "minor",
                "major"
            ],
            "groupName": "root",
            "labels": [
                "root"
            ],
            "addLabels": [
                "root"
            ]
        }
    ]
}