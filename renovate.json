{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "rebaseWhen": "conflicted",
    "schedule": [
        "before 6am on the first day of the month"
    ],
    "baseBranches": [
        "main"
    ],
    "dependencyDashboardApproval": true,
    "rangeStrategy": "bump",
    "packageRules": [
        {
            "matchPaths": [
                "package.json"
            ],
            "matchDatasources": [
                "npm"
            ],
            "matchUpdateTypes": [
                "patch",
                "minor",
                "major"
            ],
            "groupName": "root",
            "groupSlug": "shared-root",
            "labels": [
                "root"
            ],
            "addLabels": [
                "root"
            ]
        },
        {
            "matchPaths": [
                "playground/package.json"
            ],
            "matchDatasources": [
                "npm"
            ],
            "matchUpdateTypes": [
                "patch",
                "minor",
                "major"
            ],
            "groupName": "playground",
            "groupSlug": "shared-playground",
            "labels": [
                "playground"
            ],
            "addLabels": [
                "playground"
            ]
        }
    ]
}